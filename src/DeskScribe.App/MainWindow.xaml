<Window x:Class="DeskScribe.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeskScribe Overlay"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#01FFFFFF"
        Topmost="True"
        KeyDown="OnKeyDown">

    <!-- Slightly visible tint so you know it’s active -->
    <Canvas x:Name="DrawCanvas" Background="#01FFFFFF"/>
</Window>
