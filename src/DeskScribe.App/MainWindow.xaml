<Window x:Class="DeskScribe.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeskScribe Overlay"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#01000000"
        Topmost="True"
        KeyDown="OnKeyDown"
        Icon="Resources/app.ico">

    <Grid x:Name="RootGrid">
        <!-- Background PNG (non-interactive) -->
        <Image x:Name="BackgroundImage" Stretch="UniformToFill" IsHitTestVisible="False" />

        <!-- Drawing canvas (must be focusable) -->
        <Canvas x:Name="DrawCanvas" Background="Transparent" Focusable="True" />
    </Grid>
</Window>
